{
  "name": "ahl-allah",
  "version": "1.0.0",
  "main": "dist/server.js",
  "description": "Ahl Allah Quran Memorization Platform - Node.js API",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "npx ts-node src/config/migrate.ts",
    "migrate:prod": "node dist/config/migrate.js",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:logs": "docker compose logs -f",
    "docker:migrate": "docker compose exec app npm run migrate:prod"
  },
  "keywords": [
    "quran",
    "memorization",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
